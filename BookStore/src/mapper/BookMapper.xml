<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="mapper.BookMapper">
    
    	<!-- 查询所有书籍信息，供deatils显示 -->
    	<select id="getAllBookInfo" resultType="BookInfo">
    		select * from bookInfo where bookId=#{bookId}
    	</select>
    	
    	<!-- 查询所有书籍信息，供cart显示  -->
    	<select id="getBuyBookInfo" resultType="CartItem">
    		select bookName,bookPrice,bookURLS from bookInfo where bookId=#{bookId}
    	</select>
    </mapper>