<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="mapper.OrderMapper">
    
    	<!-- 添加订单信息 -->
    	<insert id="addOrderInfo">
    		insert into `order`(orderSale) values(#{sale})
    	</insert>
    	
    	<!-- 查询订单数量 -->
    	<select id="selectOrderNum" resultType="Integer">
    		select count(*) from `order`
    	</select>
    	
    	<!-- 查询总的销售额 -->
    	<select id="selectAllSale" resultType="Double">
    		select sum(orderSale) from `order`
    	</select>
    	
    	<!-- 用户数量 -->
    	<select id="getAllUser" resultType="Integer">
    		select count(*) from user
    	</select> 
    	
    	<!-- 书籍的数量 -->
    	<select id="getAllBook" resultType="Integer">
    		select count(*) from bookInfo
    	</select>
    </mapper>